<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwConfigExceptions="true">

    <!-- ログの出力先を定義 -->
    <targets>
        <!-- ログファイル -->
        <target xsi:type="File"
                name="DebugFile"
                fileName="${basedir}/../logs/degub_${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
                archiveFileName="${basedir}/../logs/degub_${shortdate}_{#}.log"
                archiveAboveSize="10485760"
                maxArchiveFiles="5"
                keepFileOpen="false" />

        <target xsi:type="File"
                name="InfoFile"
                fileName="${basedir}/../logs/info_${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=ToString}"
                archiveFileName="${basedir}/../logs/info_${shortdate}_{#}.log"
                archiveAboveSize="10485760"
                maxArchiveFiles="5"
                keepFileOpen="false" />

        <target xsi:type="File"
                name="ErrorFile"
                fileName="${basedir}/../logs/error_${shortdate}.log"
                layout="${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=ToString}"
                archiveFileName="${basedir}/../logs/error_${shortdate}_{#}.log"
                archiveAboveSize="10485760"
                maxArchiveFiles="5"
                keepFileOpen="false" />

        <!-- デバッグ用コンソール（Visual Studio 出力ウィンドウ） -->
        <target xsi:type="Debugger" name="debugger"
                layout="${longdate} | ${level:uppercase=true} | ${message}" />
    </targets>

    <!-- 出力ルールを定義 -->
    <rules>
        <!-- Debug以上のログをファイルへ -->
        <logger name="*" minlevel="Debug" maxlevel="Debug" writeTo="DebugFile" />
        <logger name="*" minlevel="Info" maxlevel="Info" writeTo="InfoFile" />
        <logger name="*" minlevel="Error" maxlevel="Error" writeTo="ErrorFile" />
        <!-- Trace以上のログをデバッガへ -->
        <logger name="*" minlevel="Trace" writeTo="debugger" />
    </rules>
</nlog>
